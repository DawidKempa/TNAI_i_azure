<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System Biblioteczny</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            padding-top: 80px;    /* Wysokość navbar */
            padding-bottom: 60px; /* Wysokość footer */
        }
    </style>
</head>
<body class="d-flex flex-column">
<header>
    <!-- Navbar z Bootstrap - statyczny -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-lg fixed-top">        
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4 text-white" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-book-open me-2 text-white"></i>System Biblioteczny
            </a>

            <button class="navbar-toggler border-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item mx-1">
                        <a class="nav-link text-white rounded-2 px-3" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Strona główna
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item mx-1">
                        <a class="nav-link text-white rounded-2 px-3" asp-area="" asp-controller="Books" asp-action="Index">
                            <i class="fas fa-book me-2"></i>Książki
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link text-white rounded-2 px-3" asp-area="" asp-controller="Loans" asp-action="Index">
                            <i class="fas fa-handshake me-2"></i>Wypożyczenia
                        </a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link text-white rounded-2 px-3" asp-area="" asp-controller="Readers" asp-action="Index">
                            <i class="fas fa-users me-2"></i>Czytelnicy
                        </a>
                    </li>
                    }
                </ul>

                <div class="navbar-nav d-flex flex-row align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <span class="navbar-text me-3 text-white">
                            <i class="fas fa-user-circle me-2"></i>@User.Identity.Name!
                        </span>
                    <a class="nav-link text-white bg-danger rounded-2 px-3" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Wyloguj
                    </a>
                    }
                    else
                    {
                    <a class="nav-link text-white bg-success rounded-2 px-3 me-2" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fas fa-sign-in-alt me-2"></i>Zaloguj
                    </a>
                    <a class="nav-link text-white bg-info rounded-2 px-3" asp-area="" asp-controller="Account" asp-action="Register">
                        <i class="fas fa-user-plus me-2"></i>Rejestracja
                    </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="py-3">
        @RenderBody()
    </main>
</div>

<!-- Footer statyczny -->
<footer class="bg-dark text-white fixed-bottom py-2">
    <div class="container">
        <div class="text-center">
            <small class="text-white-50">
                &copy; 2025 System Biblioteczny. Wykonane przez Łukasza Kowalewskiego i Dawida Kempę.
            </small>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>