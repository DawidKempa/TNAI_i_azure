@model LibrarySystem.Core.Models.Reader

@{
    ViewData["Title"] = "Dodaj konto czytelnika";
}

<h1>Dodaj konto czytelnika</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FirstName">Imię</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Nazwisko</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CardNumber">Numer karty</label>
        <input asp-for="CardNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Utwórz konto</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
