@model List<LibrarySystem.Core.Models.Reader>

    @{
    ViewData["Title"] = "Czytelnicy";
    }

    <h1>Lista czytelników</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Dodaj nowego czytelnika</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Numer karty</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reader in Model)
    {
            <tr>
                <td>@reader.FirstName</td>
                <td>@reader.LastName</td>
                <td>@reader.Email</td>
                <td>@reader.CardNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@reader.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@reader.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@reader.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
